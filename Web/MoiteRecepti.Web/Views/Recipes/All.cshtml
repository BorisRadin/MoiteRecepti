@model RecipesListViewModel
@{
    this.ViewData["Title"] = $"All Recipes, Page {Model.PageNumber}";
}

<h1>@this.ViewData["Title"]</h1>
<hr />
<div class="row">
@foreach(var recipe in this.Model.Recipes)
{
    <div class="media col-md-3">
            <img src="@recipe.ImageUrl" class="mr-3 img-fluid align-content-lg-center"/>
        <div class="media-body">
            <h5 class="mt-0">@recipe.Name</h5>
            @recipe.CategoryName
        </div>
    </div>
}
</div>

<hr />
<partial name="_PagingPartial" model="@Model"/>

